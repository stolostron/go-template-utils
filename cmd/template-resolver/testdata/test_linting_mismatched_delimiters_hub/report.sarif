{
  "version": "2.1.0",
  "$schema": "https://raw.githubusercontent.com/oasis-tcs/sarif-spec/main/sarif-2.1/schema/sarif-schema-2.1.0.json",
  "runs": [
    {
      "tool": {
        "driver": {
          "name": "go-template-utils-linter",
          "informationUri": "https://github.com/stolostron/go-template-utils",
          "rules": [
            {
              "id": "GTUL002",
              "name": "Mismatched Delimiters",
              "shortDescription": {
                "text": "Ensures template delimiters ({{/}} and {{hub/hub}}) are properly paired"
              }
            }
          ]
        }
      },
      "artifacts": [
        {
          "location": {
            "uri": "cmd/template-resolver/testdata/test_linting_mismatched_delimiters_hub/input.yaml"
          }
        }
      ],
      "results": [
        {
          "level": "error",
          "message": {
            "text": "unmatched opening delimiter '{{hub'"
          },
          "locations": [
            {
              "physicalLocation": {
                "artifactLocation": {
                  "uri": "cmd/template-resolver/testdata/test_linting_mismatched_delimiters_hub/input.yaml",
                  "index": 0
                },
                "region": {
                  "startLine": 21,
                  "startColumn": 26
                }
              }
            }
          ],
          "ruleId": "GTUL002",
          "ruleIndex": 0
        },
        {
          "level": "error",
          "message": {
            "text": "unmatched opening delimiter '{{hub'"
          },
          "locations": [
            {
              "physicalLocation": {
                "artifactLocation": {
                  "uri": "cmd/template-resolver/testdata/test_linting_mismatched_delimiters_hub/input.yaml",
                  "index": 0
                },
                "region": {
                  "startLine": 23,
                  "startColumn": 30
                }
              }
            }
          ],
          "ruleId": "GTUL002",
          "ruleIndex": 0
        },
        {
          "level": "error",
          "message": {
            "text": "mismatched hub and managed cluster delimiters"
          },
          "locations": [
            {
              "physicalLocation": {
                "artifactLocation": {
                  "uri": "cmd/template-resolver/testdata/test_linting_mismatched_delimiters_hub/input.yaml",
                  "index": 0
                },
                "region": {
                  "startLine": 26,
                  "startColumn": 101
                }
              }
            }
          ],
          "ruleId": "GTUL002",
          "ruleIndex": 0
        }
      ]
    }
  ]
}
